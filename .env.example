# Chance de vitória (1 em X)
WINNING_CHANCE=100

# Configurações do banco de dados - usando PostgreSQL do Supabase
DATABASE_URL="postgres://postgres.USER:PASSWORD@HOST:PORT/DATABASE"

# Credenciais de administrador - ATUALIZE PARA VALORES SEGUROS EM PRODUÇÃO
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password
ADMIN_EMAIL=admin@example.com

# Chave secreta para JWT - USE UMA CHAVE SEGURA EM PRODUÇÃO
JWT_SECRET=sua_chave_secreta_aqui

# Configurações de e-mail (para produção)
# SMTP_HOST=smtp.seuprovedor.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=seu@email.com
# SMTP_PASS=sua_senha

# Configurações da API HorsePay
HORSEPAY_CLIENT_KEY=sua_client_key_aqui
HORSEPAY_CLIENT_SECRET=sua_client_secret_aqui
HORSEPAY_CALLBACK_URL=https://seusite.com/api/pix/webhook

# Webhook URL para receber notificações de pagamento
WEBHOOK_URL=https://seusite.com/api/pix/webhook

# Nome do comerciante/empresa para identificação nos QR Codes
MERCHANT_NAME=Nome do Seu Comércio
# Cidade do comerciante
MERCHANT_CITY=Sua Cidade

# Identificador da POS (Point of Sale) para transações PIX
POS_ID=POS00001

# Configurações do Supabase
SUPABASE_URL="https://seu-projeto.supabase.co"
NEXT_PUBLIC_SUPABASE_URL="https://seu-projeto.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="sua_anon_key_aqui"
SUPABASE_SERVICE_ROLE_KEY="sua_service_role_key_aqui"
SUPABASE_JWT_SECRET="sua_jwt_secret_aqui"

# Adicionar variável para ambiente
NODE_ENV=production

# URL base da aplicação
NEXT_PUBLIC_BASE_URL=http://localhost:3000