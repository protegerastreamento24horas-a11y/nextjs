// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para configuração da rifa
model RaffleConfig {
  id                   String   @id @default(uuid())
  ticketPrice          Float    @default(1000) // Preço do bilhete em R$
  maxNumber            Int      @default(10000) // Número máximo para sorteio
  winningNumbers       String   // Números premiados separados por vírgula
  isActive             Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

// Modelo para os prêmios
model Prize {
  id          String   @id @default(uuid())
  name        String
  description String
  imageUrl    String?
  value       Float
  rarity      Int      @default(1) // 1=comum, 2=incomum, 3=raro, 4=épico, 5=lendário
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tickets     Ticket[]
  winners     Winner[]
}

// Modelo para os bilhetes das rifas
model Ticket {
  id          String   @id @default(uuid())
  userName    String
  userEmail   String?
  purchaseDate DateTime @default(now())
  isWinner    Boolean  @default(false)
  ip          String?
  userAgent   String?
  selectedNumber Int?   // Número selecionado pelo usuário (opcional)
  drawnNumber  Int?    // Número sorteado automaticamente
  prize       Prize?   @relation(fields: [prizeId], references: [id])
  prizeId     String?
  winner      Winner?
}

// Modelo para os vencedores
model Winner {
  id          String   @id @default(uuid())
  ticketId    String   @unique
  userName    String
  userEmail   String?
  prizeDate   DateTime @default(now())
  drawnNumber Int      // Número que foi sorteado
  prize       Prize?   @relation(fields: [prizeId], references: [id])
  prizeId     String?
  ticket      Ticket   @relation(fields: [ticketId], references: [id])
}