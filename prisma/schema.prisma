// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para configuração da rifa
model RaffleConfig {
  id                  String   @id @default(uuid())
  ticketPrice         Float
  prizeValue          Float
  maxNumber           Int
  winningNumbers      String
  autoDrawnNumbers    Int
  winningProbability  Int
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// Modelo para os prêmios
model Prize {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  imageUrl    String?
  value       Float
  rarity      Int      @default(1) // 1=comum, 2=incomum, 3=raro, 4=épico, 5=lendário
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tickets     Ticket[]
  winners     Winner[]
}

// Modelo para os bilhetes das rifas
model Ticket {
  id             String   @id @default(uuid())
  userName       String
  userEmail      String?
  purchaseDate   DateTime @default(now())
  isWinner       Boolean  @default(false)
  ip             String?
  userAgent      String?
  selectedNumber Int?
  drawnNumbers   String?
  prizeId        String?
  prize          Prize?   @relation(fields: [prizeId], references: [id])
}

// Modelo para os vencedores
model Winner {
  id         String   @id @default(uuid())
  ticketId   String   @unique
  userName   String
  userEmail  String?
  prizeDate  DateTime @default(now())
  drawnNumbers String
  prizeId    String?
  prize      Prize?   @relation(fields: [prizeId], references: [id])
}