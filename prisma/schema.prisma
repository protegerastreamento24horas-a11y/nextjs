generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RaffleConfig {
  id                  String   @id @default(uuid())
  ticketPrice         Float
  prizeValue          Float
  maxNumber           Int
  winningNumbers      String
  autoDrawnNumbers    Int
  winningProbability  Int
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @default(now())
  // Removendo o relacionamento com tickets para evitar problemas
}

model Prize {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  imageUrl    String?
  value       Float
  rarity      Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  tickets     Ticket[]
  winners     Winner[]
}

model Ticket {
  id             String   @id @default(uuid())
  userName       String
  userEmail      String?
  purchaseDate   DateTime @default(now())
  isWinner       Boolean  @default(false)
  ip             String?
  userAgent      String?
  selectedNumber Int?
  drawnNumbers   String?
  prizeId        String?
  prize          Prize?   @relation(fields: [prizeId], references: [id])
  winner         Winner?
  // Removendo o relacionamento com RaffleConfig
}

model Winner {
  id           String   @id @default(uuid())
  ticketId     String   @unique
  ticket       Ticket   @relation(fields: [ticketId], references: [id])
  userName     String
  userEmail    String?
  prizeDate    DateTime @default(now())
  drawnNumbers String
  prizeId      String?
  prize        Prize?   @relation(fields: [prizeId], references: [id])
}